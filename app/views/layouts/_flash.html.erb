<% if notice %>
    <div class="alert alert-info mt-4 d-flex justify-content-between" role="alert">
        <p><%= notice %></p><button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% end %>  

<% if alert %>
    <div class="alert alert-warning mt-4 d-flex justify-content-between" role="alert">
    <p><%= alert %></p>
    <button type="button" class="btn-close btn-sm" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<% end %>